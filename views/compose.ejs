<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="title-post">Title</label>
    <input type="text" class="form-control" name="title" id="title-post" placeholder="Enter title">
    <small id="emailHelp" class="form-text text-muted">Name the title of your article here.</small>
  </div>
  <div class="form-group">
    <label for="date-post">Date</label>
    <input type="date" class="form-control" name="date" id="date-post" placeholder="Enter date">
    <small id="emailHelp" class="form-text text-muted">date of post</small>
  </div>
  <div class="form-group">
    <label for="article-post">Article</label>
    <textarea class="form-control" id="article-post" name="content" placeholder="Enter text..." rows="8"></textarea>
  </div>
  <button class="btn btn-success" type="submit" name="button" value="publish">Publish</button>
</form>

<%- include('partials/footer'); -%>
